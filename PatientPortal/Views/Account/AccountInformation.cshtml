@using System.Data;
@using OpenDentBusiness;
@using OpenDentBusiness.Mobile;
@model PatientPortalMVC.Models.AccountModel
@{
	ViewBag.Title = "Account";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-top:3em;margin-left:3em;"> 
	<div class="divtable">
		<div class="divtablerow">
			<div class="divtablecell1 padbottom20px">
				<strong>Balance </strong></div><div class="divtablecell2">=&nbsp;&nbsp;&nbsp;&nbsp;@Html.Encode(Model.BalTotal)
			</div>
		</div>
		<div class="divtablerow">
			<div class="divtablecell1 padbottom20px">
				<strong>Ins Pending </strong></div><div class="divtablecell2">=&nbsp;&nbsp;&nbsp;&nbsp;@Html.Encode(Model.InsEst)
			</div>
		</div>
		<div class="divtablerow">
			<div class="divtablecell1 padbottom20px">
				<strong>After Ins </strong></div><div class="divtablecell2">=&nbsp;&nbsp;&nbsp;&nbsp;@Html.Encode(Model.AfterIns)
			</div>
		</div>
	</div>
</div>

<p><strong>Statement History:</strong></p>
<div style="margin-left:3em">
@if(Model.statementmList.Count()==0) {
	<p>No Statement History available</p>
}
	@foreach(var item in Model.statementmList) {    
		<p>@Html.Encode("Statement "+item.DateSent.ToShortDateString() + " ")
		@if(item.DocNum!=0) {
			@Html.ActionLink("View Statement","ShowPdfFile","Account",new { d=item.DocNum },new { target="_blank" }) 
  }
		</p>
	}
</div>
